<div class="flex flex-wrap w-full px-5 mb-5">
 
     <div class="w-full py-20 bg-[#f7f7f7] bg-no-repeat bg-center bg-cover relative z-0 before:content-[''] before:absolute before:top-0 before:left-0 before:right-0 before:bottom-0 before:bg-black before:bg-opacity-40 before:-z-[1]"
        style=" background-image: url('{{photoGallery.[4].image.url}}');">
        <h1 class="text-3xl md:text-5xl font-semibold text-white text-center">{{formatOption name}}</h1>
        <h3 class="mt-4 text-center text-2xl text-white">{{c_textList}}</h3>
    </div>

    <div class="grid grid-cols-3 gap-2 mt-2">
    
        <div>
            <div class="w-full p-8 ml-96">
                <h3
                    class="timeshow text-2xl md:text-3xl text-dark_grey font-semibold leading-tight after:content-[''] after:w-16 after:h-1 after:bg-black after:block after:mx-auto after:mt-2.5">
                </h3>
            </div>
        </div>
        <div></div>
    </div>


    <div class="w-full md:w-1/2 lg:w-[300px] text-lg px-5 py-5 bg-[#f7f7f7] text-dark_grey">
        <h2 class="mb-4 text-xl text-black font-bold">{{c_title_lists.[0]}}</h2>
        <div class="pl-10 relative">
            <span class="flex h-8 w-8 absolute top-0 left-0">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-black opacity-75"></span>
                <span class="relative inline-flex rounded-full h-8 w-8 bg-black items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" class="fill-white w-5 h-5">
                        <g data-name="Layer 2">
                            <path
                                d="M16,30a1,1,0,0,0,.62-.22C17,29.44,27,21.38,27,13A11,11,0,0,0,5,13c0,8.38,10,16.44,10.38,16.78A1,1,0,0,0,16,30ZM7,13a9,9,0,0,1,18,0c0,6.3-6.87,12.81-9,14.69C13.87,25.81,7,19.3,7,13Z" />
                            <path d="M21,13a5,5,0,1,0-5,5A5,5,0,0,0,21,13Zm-8,0a3,3,0,1,1,3,3A3,3,0,0,1,13,13Z" />
                        </g>
                    </svg>
                </span>
            </span>
            <div class="">{{address.line1}}</div>
            <div class="">{{address.city}}, {{address.region}} {{address.postalCode}}</div>
            <div class="">{{address.countryCode}}</div>
        </div>

        <p class="mt-5 pl-10 relative">
            <span class="flex h-8 w-8 absolute top-0 left-0">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-black opacity-75"></span>
                <span class="relative inline-flex rounded-full h-8 w-8 bg-black items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" class="fill-white w-5 h-5">
                        <g data-name="Layer 2">
                            <path
                                d="M27.308,20.649l-2.2-2.2a3.521,3.521,0,0,0-4.938-.021,2.152,2.152,0,0,1-2.729.267A15.026,15.026,0,0,1,13.3,14.562a2.181,2.181,0,0,1,.284-2.739A3.521,3.521,0,0,0,13.553,6.9l-2.2-2.2a3.514,3.514,0,0,0-4.961,0l-.633.634c-3.3,3.3-3.053,10.238,3.813,17.1,4.14,4.141,8.307,5.875,11.686,5.875a7.5,7.5,0,0,0,5.418-2.061l.634-.634A3.513,3.513,0,0,0,27.308,20.649ZM25.894,24.2l-.634.634c-2.6,2.6-8.339,2.125-14.276-3.813S4.571,9.34,7.171,6.74L7.8,6.107a1.511,1.511,0,0,1,2.133,0l2.2,2.2a1.511,1.511,0,0,1,.021,2.11,4.181,4.181,0,0,0-.531,5.239,17.01,17.01,0,0,0,4.713,4.706,4.179,4.179,0,0,0,5.231-.517,1.512,1.512,0,0,1,2.118.013l2.2,2.2A1.51,1.51,0,0,1,25.894,24.2Z" />
                        </g>
                    </svg>
                </span>
            </span>
            <a href="tel:{{mainPhone}}"> {{mainPhone}}</a>
        </p>
        <a id="address"
            class="inline-block mt-10 transition-all duration-300 text-base font-semibold bg-black  text-white py-2.5 px-5 "
            href="https://www.google.com/maps/dir/?api=1&destination={{address.line1}} {{address.city}} {{address.region}} {{address.postalCode}}"
            target="_blank">{{c_title_lists.[1]}}
        </a>
    </div>
    <div class="w-full md:w-1/2 lg:w-[330px] text-lg px-5 py-5 bg-black text-white">
        <h2 class="mb-4 text-xl font-bold">{{c_title_lists.[2]}}</h2>
        <div class="hours-div">{{>hours hours}}</div>
    </div>
    <div class="w-full lg:w-[calc(100%_-_630px)] lg:pl-5">
        <iframe class="border-none"
            src="https://maps.google.com/maps?q={{address.line2}},{{address.line1}},{{address.city}},{{address.region}} {{address.postalCode}},{{address.countryCode}}&en=uk&z=14&amp;output=embed"
            width="100%" height="450" loading="lazy"></iframe>
    </div>
</div>
