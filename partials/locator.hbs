          <div class="directions "></div>
          <div class="error-text "></div>
          
          <div class="flex items-center flex-wrap mb-5">
            <input class="transition-all duration-300 text-base font-normal bg-white text-dark_grey py-1.5 leading-[26px] px-4 border border-input_border rounded-md outline-none focus:outline-none w-[calc(100%_-_100px)]" type="text" id="location-input"
              placeholder="{{c_locator_title.[1]}}" aria-label="E.g. New York" />
            <button class="transition-all duration-300 text-base font-semibold bg-orange border border-orange hover:bg-dark_orange hover:border-dark_orange leading-[22px] text-white py-1.5 px-4 rounded-md ml-auto" title="Search using your current location!" id="search-location-button" type="submit" onclick="this.blur();">
